{
  "integration_settings": {
    "enable_cross_cli": true,
    "cross_cli_detection_patterns": [
      "use\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "call\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "ask\\s+(\\w+)\\s+for\\s+([^\\.\\n!?]*)",
      "请用(\\w+)\\s*帮我?([^。！？\\n]*)",
      "调用(\\w+)\\s*来([^。！？\\n]*)",
      "用(\\w+)\\s*帮我?([^。！？\\n]*)"
    ]
  },
  "workflow_settings": {
    "auto_register_pipelines": true,
    "pipeline_hooks": [
      "on_workflow_start",
      "on_stage_complete",
      "on_workflow_success"
    ]
  }
}
