{
  "integration_settings": {
    "enable_cross_cli": true,
    "cross_cli_detection_patterns": [
      "use\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "call\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "ask\\s+(\\w+)\\s+for\\s+([^\\.\\n!?]*)",
      "请用(\\w+)\\s*帮我?([^。！？\\n]*)",
      "调用(\\w+)\\s*来([^。！？\\n]*)",
      "用(\\w+)\\s*帮我?([^。！？\\n]*)"
    ]
  },
  "notification_settings": {
    "auto_register_hooks": true,
    "notification_hooks": [
      "on_user_notification",
      "on_system_alert",
      "on_task_completion"
    ]
  }
}