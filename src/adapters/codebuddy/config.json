{
  "integration_settings": {
    "enable_cross_cli": true,
    "cross_cli_detection_patterns": [
      "use\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "call\\s+(\\w+)\\s+to\\s+([^\\.\\n!?]*)",
      "ask\\s+(\\w+)\\s+for\\s+([^\\.\\n!?]*)",
      "请用(\\w+)\\s*帮我?([^。！？\\n]*)",
      "调用(\\w+)\\s*来([^。！？\\n]*)",
      "用(\\w+)\\s*帮我?([^。！？\\n]*)"
    ]
  },
  "skills_settings": {
    "auto_register_skills": true,
    "skill_hooks": [
      "on_skill_invocation",
      "on_buddy_request",
      "on_cross_cli_task"
    ]
  }
}