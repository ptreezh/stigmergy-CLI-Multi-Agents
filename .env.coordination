# Coordination Layer Environment Configuration

# Node.js Configuration
NODE_ENV=production
NODE_VERSION=>=16.0.0

# Python Configuration
PYTHON_ENABLED=true
PYTHON_PATH=python3
PYTHON_MODULE=coordination_layer
PYTHON_DETECTION_TIMEOUT=5000
PYTHON_EXECUTION_TIMEOUT=30000

# Caching Configuration
ENABLE_CACHING=true
CACHE_TTL=60000
CACHE_MAX_SIZE=1000

# Fallback Configuration
ENABLE_FALLBACK=true
FALLBACK_TIMEOUT=30000
MAX_DEGRADATION_LEVEL=3
AUTO_RECOVERY=true
RECOVERY_INTERVAL=60000

# Logging Configuration
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
LOG_LEVEL=INFO
LOG_PATH=./logs
ENABLE_METRICS=true
ENABLE_DASHBOARD=false

# Performance Configuration
ENABLE_CPU_MONITORING=true
ENABLE_MEMORY_MONITORING=true
SAMPLE_INTERVAL=1000
MAX_SAMPLES=1000

# CLI Configuration
SUPPORTED_CLIS=claude,qwen,iflow,codex,codebuddy,qodercli
DEFAULT_CLI=claude
CLI_CHECK_TIMEOUT=5000

# Collaboration Configuration
ENABLE_COLLABORATION=true
MAX_COLLABORATION_PARTICIPANTS=5
COLLABORATION_TIMEOUT=60000

# Error Handling Configuration
ENABLE_ERROR_HANDLING=true
DEFAULT_RETRY_POLICY=exponential_backoff
MAX_RETRIES=3
RETRY_DELAY=1000